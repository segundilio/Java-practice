//This program evaluates whether or not a string is a palindrome

public class Palindrome {
    public static void main(String args[]) {
       
       
       int stringlength;
       String test = "hannah";
       stringlength = test.length();
       int halfstring;
       
       if ((stringlength-stringlength) == 0)
       {
        halfstring = stringlength/2;
        int beginning = halfstring-halfstring;
        String firsthalf = test.substring(beginning, halfstring);
        String secondhalf = test.substring(halfstring);
        firsthalf = firsthalf.toCharArray();// here the second hald of the string needs to be converted into a char array (lookup api) and then the values compared to the other half
        System.out.println("The first half of your string is " + firsthalf);
        System.out.println("The second half of your string is " + secondhalf);
        
             if (firsthalf==secondhalf)
             {
             System.out.println("Your string is a palindrome");
             }
        else
        System.out.println("Your string is not a palindrome");
       }
        else
        System.out.println("Program Ended");
    }
}
